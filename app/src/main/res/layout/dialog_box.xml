<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="551dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="25sp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|center"
            android:text="Choose your preference:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="cursive" />

        <EditText
            android:id="@+id/numberOfTeaspoons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="2 teaspoons"
            android:inputType="number"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="Enter the number of teaspoons of sugar you'd like" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <Spinner
            android:id="@+id/CoffeeChoices"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:entries="@array/CoffeeChoice" />

        <Spinner
            android:id="@+id/TemperatureChoice"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:entries="@array/Temperature" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />

            <Button
                android:id="@+id/btnOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OK" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>